<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.min.threeminutestoteach.views.XCRoundRectImageView
            android:id="@+id/iv_item2_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_item2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/font_32"
            android:textColor="@color/col_333333"
            android:text="牛轧糖"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="教学"/>
    </LinearLayout>
    <TextView
        android:layout_below="@id/item_ll"
        android:id="@+id/tv_item2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_38"
        android:textColor="@color/col_333333"
        android:textStyle="bold"
        android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>
    <TextView
        android:layout_marginTop="6dp"
        android:layout_below="@id/tv_item2_title"
        android:id="@+id/tv_item2_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_32"
        android:textColor="@color/col_999999"
        android:text="温暖的家你付款赶紧睡吧敬爱的空间被罚款颁发的被罚款的被罚款的步伐"
        />
    <ImageView
        android:layout_below="@id/tv_item2_details"
        android:id="@+id/iv_itme2_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_below="@id/iv_itme2_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/share"/>
        <TextView
            android:id="@+id/tv_item2_shareNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="11"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ungood"/>
        <TextView
            android:id="@+id/tv_item2_goodNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="22"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/discusstion"/>
        <TextView
            android:id="@+id/tv_item2_discussNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="111"/>

    </LinearLayout>
</RelativeLayout>