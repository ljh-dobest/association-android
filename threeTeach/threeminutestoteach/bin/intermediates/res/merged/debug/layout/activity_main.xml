<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/ll_main_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/col_121212"
            android:textSize="16sp"
            android:text="@string/three_minutest_teach"
            />
        <ImageView
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/iv_main_more"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/add"/>
    </RelativeLayout>
 <View
     android:layout_below="@id/rl_header"
     android:id="@+id/view_header"
     android:layout_width="match_parent"
     android:layout_height="1dp"
     android:background="@color/col_ECEEF0"/>
    <com.andview.refreshview.XRefreshView
        android:layout_below="@id/view_header"
        android:id="@+id/xrefreshview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/lv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        ></ListView>
    </com.andview.refreshview.XRefreshView>
    <Button
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/btn_main_send"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@mipmap/btn_send_teach"/>
</RelativeLayout>
