<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_answer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_answer_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </LinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="评论列表"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/col_333333"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <com.min.threeminutestoteach.views.XCRoundRectImageView
            android:id="@+id/iv_answer_userHeader"
            android:layout_width="50dp"
            android:layout_height="50dp"
          android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_answer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textSize="16sp"
            android:textColor="@color/col_333333"
            android:text="112"/>
    </LinearLayout>
    <TextView
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:textColor="@color/col_121212"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="left|center_vertical"
        android:background="@color/col_ECEEF0"
        android:text="评论"/>
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="20px"
        android:id="@+id/rv_Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_answer_null"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/discussion_null"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/col_999999"
            android:textSize="16sp"
            android:text="沙发还空着呢，快来抢吧！"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_answer_evaluate"
          android:layout_marginLeft="10px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="输入你的评论"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_answer_sendEvaluate"
          android:layout_margin="10px"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发送"
            android:background="@drawable/send"/>
    </LinearLayout>
</RelativeLayout>
