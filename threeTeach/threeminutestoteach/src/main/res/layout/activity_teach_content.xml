<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <com.min.threeminutestoteach.views.MyGSYVideoPlayer
        android:id="@+id/gsy_teacheContent_player"
        android:layout_width="match_parent"
        android:layout_height="200dp">
    </com.min.threeminutestoteach.views.MyGSYVideoPlayer>
    <TextView
        android:id="@+id/tv_teachContent_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_38"
        android:textColor="@color/col_333333"
        android:textStyle="bold"
        android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.min.threeminutestoteach.views.XCRoundRectImageView
            android:id="@+id/iv_teachContent_userHeader"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/tv_teachContent_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/font_32"
            android:textColor="@color/col_333333"
            android:text="牛轧糖"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_teachContent_time"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="2017-6-13"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/tv_teachContent_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_32"
        android:textColor="@color/col_999999"
        android:text="温暖的家你付款赶紧睡吧敬爱的空间被罚款颁发的被罚款的被罚款的步伐"
        />

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_teachContent_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/share"/>
        <TextView
            android:id="@+id/tv_teachContent_shareNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="11"/>
        <ImageView
            android:id="@+id/iv_teachContent_good"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/ungood"/>
        <TextView
            android:id="@+id/tv_teachContent_goodNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="22"/>
        <ImageView
            android:id="@+id/iv_teachContent_discuss"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/discusstion"/>
        <TextView
            android:id="@+id/tv_teachContent_discussNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="111"/>
        <ImageView
            android:id="@+id/iv_teachContent_collect"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/collect"/>
        <TextView
            android:id="@+id/tv_teachContent_collectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/font_24"
            android:textColor="@color/col_999999"
            android:text="111"/>
        <ImageView
            android:id="@+id/iv_teachContent_download"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/download"/>
    </LinearLayout>
</LinearLayout>
