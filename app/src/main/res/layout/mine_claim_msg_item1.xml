<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="99px"
            android:layout_height="99px"
            android:id="@+id/iv_mine_claim_msg_userHeader"
            android:src="@drawable/test"
            android:scaleType="fitXY"
            app:riv_corner_radius="10px"
            app:riv_oval="false" />
        <TextView
            android:id="@+id/tv_mine_claim_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_E64242"
            android:text="恭喜你！成功认领了"
            />
        <TextView
            android:layout_toRightOf="@id/iv_mine_claim_msg_userHeader"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:id="@+id/tv_mine_claim_msg_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="王博文儿"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/tv_mine_claim_msg_name"
            android:id="@+id/tv_mine_claim_msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_999999"
            android:text="成功认领您"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_mine_claim_msg_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="2017-04-21"/>

</LinearLayout>