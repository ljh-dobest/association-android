<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="99px"
            android:layout_height="99px"
            android:id="@+id/iv_mine_claim_msg_item2_userHeader"
            android:src="@drawable/test"
            android:scaleType="fitXY"
            app:riv_corner_radius="10px"
            app:riv_oval="false" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_mine_claim_msg_item2_userHeader"
            android:layout_marginLeft="20px"
            android:id="@+id/tv_mine_claim_msg_item2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="王博文儿"/>
        <TextView
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/iv_mine_claim_msg_item2_userHeader"
            android:layout_below="@id/tv_mine_claim_msg_item2_name"
            android:id="@+id/tv_mine_claim_msg_item2_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_999999"
            android:text="尝试认领你,是否让王博文认领成功?"
            />
       <LinearLayout
           android:visibility="gone"
           android:id="@+id/ll_mine_claim_msg_comfir"
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:layout_toRightOf="@id/iv_mine_claim_msg_item2_userHeader"
           android:layout_below="@id/tv_mine_claim_msg_item2_content"
           android:layout_width="wrap_content"
           android:layout_height="30dp"
           android:orientation="horizontal">
           <Button
               android:id="@+id/btn_mine_claim_msg_yes"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@mipmap/mine_claim_yes"
               android:text="同意认领"/>
           <Button
               android:layout_marginLeft="20dp"
               android:id="@+id/btn_mine_claim_msg_no"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@mipmap/mine_claim_no"
               android:text="拒绝认领"/>
       </LinearLayout>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_below="@id/tv_mine_claim_msg_item2_name"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_mine_claim_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/mine_cliam_msg_down"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</LinearLayout>