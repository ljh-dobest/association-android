<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="99px"
            android:layout_height="99px"
            android:id="@+id/iv_mine_claim_userHeader"
            android:src="@drawable/test"
            android:scaleType="fitXY"
            app:riv_corner_radius="10px"
            app:riv_oval="false" />
        <TextView
            android:layout_toRightOf="@id/iv_mine_claim_userHeader"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"
            android:id="@+id/tv_mine_claim_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="王博文儿"/>
        <TextView
            android:layout_marginRight="10dp"
          android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/tv_mine_claim_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="2017-04-21"/>
    </com.zhy.autolayout.AutoRelativeLayout>
</LinearLayout>