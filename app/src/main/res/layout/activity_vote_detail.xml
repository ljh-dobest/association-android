<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_vote_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ike.communityalliance.ui.activity.VoteDetailActivity">

    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:paddingLeft="20px"
        android:id="@+id/rl_interestHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_vote_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_shareFriend_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/font_32"
            android:text="群投票"
            />
        <TextView
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_vote_detail_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/col_ECEEF0"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.ike.communityalliance.wedget.XCRoundRectImageView
                    android:layout_marginLeft="20px"
                    android:id="@+id/iv_vote_detail_userHeader"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:src="@mipmap/ic_launcher"/>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_toRightOf="@id/iv_vote_detail_userHeader"
                    android:layout_marginLeft="10px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_vote_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30px"
                        android:textColor="@color/col_333333"
                        android:text="孟小宝"/>

                    <TextView
                        android:id="@+id/tv_vote_detail_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/col_999999"
                        android:text="2016-12-25:14:25"/>
                </com.zhy.autolayout.AutoLinearLayout>
                <TextView
                    android:id="@+id/tv_vote_detail_status"
                    android:layout_width="146px"
                    android:layout_height="52px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:textSize="28px"
                    android:gravity="center"
                    android:background="@mipmap/vote_detail_status"
                    android:text="进行中"/>
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:id="@+id/tv_vote_detail_title"
                android:layout_marginLeft="20px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32px"
                android:textStyle="bold"
                android:textColor="@color/col_666666"
                android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>
            <ImageView
                android:padding="20px"
                android:id="@+id/iv_vote_detail_icon"
                android:layout_width="match_parent"
                android:layout_height="350px"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="" />

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:choiceMode="multipleChoice"
                  >
                </ListView>
                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="26px"
                        android:textStyle="bold"
                        android:textColor="@color/col_999999"
                        android:text="投票截止时间:"
                        />
                    <TextView
                        android:id="@+id/tv_vote_detail_colseTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="26px"
                        android:textStyle="bold"
                        android:textColor="@color/col_999999"
                        android:text="2017-10-30"
                        />
                </com.zhy.autolayout.AutoLinearLayout>
                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/ll_vote_detail_joinUsers"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_activity_detail_wasapply"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="已报名(20)"
                            />
                        <TextView
                            android:id="@+id/tv_activity_detail_moreJoinUsers"
                            android:layout_marginRight="40px"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="更多"
                            />
                    </com.zhy.autolayout.AutoLinearLayout>

                    <!--参与的用户-->
                    <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/member"
                        android:id="@+id/rv_votedetail_joinusers"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    </android.support.v7.widget.RecyclerView>
                </com.zhy.autolayout.AutoLinearLayout>
                <Button
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/font_40"
                    android:textColor="@color/white"
                    android:text="@string/vote"
                    android:id="@+id/btn_vote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/comfirm_vote" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>
</com.zhy.autolayout.AutoLinearLayout>
