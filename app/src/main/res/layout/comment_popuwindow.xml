            android:id="@+id/tv_shareFriendContent_sendComment"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@drawable/interest_join"
            android:text="发送"
            />
</com.zhy.autolayout.AutoLinearLayout>