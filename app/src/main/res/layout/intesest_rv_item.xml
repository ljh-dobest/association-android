<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.ike.communityalliance.wedget.image.SelectableRoundedImageView
        android:layout_width="124px"
        android:layout_height="124px"
        android:id="@+id/iv_inteset_rv_item_header"
        android:src="@mipmap/default_fmessage"
        android:layout_marginTop="25px"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="27px"/>
<com.zhy.autolayout.AutoRelativeLayout
    android:layout_marginLeft="18px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:layout_centerVertical="true"
    android:layout_toRightOf="@+id/iv_inteset_rv_item_header">
    <TextView
        android:text="象棋总动员"
        android:gravity="left"
        android:id="@+id/iv_inteset_rv_item_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/col_333333"
        android:textSize="@dimen/font_32"
        />

    <TextView
        android:textColor="@color/col_999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_below="@id/iv_inteset_rv_item_groupName"
        android:text="群人数:20人"
        android:textSize="@dimen/font_24"
        android:id="@+id/iv_inteset_rv_item_groupNum" />
</com.zhy.autolayout.AutoRelativeLayout>
<Button
    android:id="@+id/btn_inteset_join"
    android:layout_width="164px"
    android:layout_height="60px"
    android:background="@drawable/interest_join"
    android:text="申请加入"
    android:textSize="@dimen/font_28px"
    android:layout_centerVertical="true"
    android:textColor="@color/white"
    android:layout_alignParentRight="true"
    android:layout_marginRight="20px"
    />
</com.zhy.autolayout.AutoRelativeLayout>