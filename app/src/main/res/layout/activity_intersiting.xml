<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/col_999999"
    >
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:paddingLeft="20px"
        android:id="@+id/rl_interestHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_interest_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_interest_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="发现"
                android:textSize="@dimen/font_32"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/font_32"
            android:text="兴趣联盟"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_interest_createGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/create_interest_group"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.design.widget.TabLayout
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:id="@+id/tl_interesting"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/col_10DB9F"
        app:tabIndicatorHeight="7px"
        app:tabSelectedTextColor="@color/col_333333"
        app:tabTextColor="@color/col_666666">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:background="@color/white"
        android:layout_marginTop="2px"
        android:id="@+id/vp_interesting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</com.zhy.autolayout.AutoLinearLayout>
