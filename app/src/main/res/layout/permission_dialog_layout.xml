<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
        <com.zhy.autolayout.AutoLinearLayout
            android:paddingTop="30dp"
            android:background="@color/white"
            android:id="@+id/ll_comfirm_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">
                <TextView
                    android:id="@+id/tv_permission_dialog_title1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_30"
                    android:textColor="@color/col_333333"
                    android:textStyle="bold"
                    android:text="部分信息确认后不能再修改!"/>

                <TextView
                    android:layout_marginTop="16px"
                    android:id="@+id/tv_permission_dialog_title2"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_30"
                    android:textColor="@color/col_333333"
                    android:textStyle="bold"
                    android:text="确认保存？"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_permission_dialog_comfirm"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/btn_login"
                    android:layout_height="90px"
                    android:text="确认"/>
                <Button
                    android:id="@+id/btn_permission_dialog_cancel"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="@mipmap/btn_cancel"
                    android:layout_height="90px"
                    android:text="取消"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>