<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:paddingTop="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.ike.communityalliance.wedget.image.CircleImageView
            android:layout_marginLeft="20px"
            android:id="@+id/iv_shareFriendContent_item_icon"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_toRightOf="@id/iv_shareFriendContent_item_icon"
            android:layout_marginLeft="10px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shareFriendContent_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="@color/col_333333"
                android:text="孟小宝"/>
            <TextView
                android:layout_marginTop="20px"
                android:id="@+id/tv_shareFriendContent_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="26px"
                android:textColor="@color/col_666666"
                android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>

            <TextView
                android:layout_marginTop="30px"
                android:layout_marginBottom="10px"
                android:id="@+id/tv_shareFriendContent_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:textColor="@color/col_999999"
                android:text="2016-12-25:14:25"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_shareFriendContent_item_todicu"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:src="@drawable/pinglun"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="110px"
        android:id="@+id/rv_shareFriendContent_item_replayUser"
        android:background="@color/col_ECEEF0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</com.zhy.autolayout.AutoLinearLayout>