<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_shareFriendContent_main"
   >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:paddingLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_sendshareFriendContent_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_sendshareFriendContent_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
           android:layout_centerInParent="true"
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="正文"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.ike.communityalliance.wedget.XCRoundRectImageView
            android:layout_marginLeft="20px"
            android:id="@+id/iv_shareFriendContent_icon"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_toRightOf="@id/iv_shareFriendContent_icon"
            android:layout_marginLeft="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shareFriendContent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="@color/col_333333"
                android:text="孟小宝"/>

            <TextView
                android:id="@+id/tv_shareFriendContent_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/col_999999"
                android:text="2016-12-25:14:25"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:id="@+id/iv_shareFriendContent_todicu"
            android:layout_width="45dp"
            android:layout_height="20dp"
            android:src="@drawable/pinglun"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:id="@+id/tv_shareFriendContent_title"
        android:layout_marginLeft="110px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26px"
        android:textColor="@color/col_666666"
        android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="30px"
        android:layout_marginLeft="110px"
        android:id="@+id/rv_shareFriendContent_images"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/col_ECEEF0"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:padding="20px"
      >
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/iv_shareFriendContent_discu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30px"
            android:textColor="@color/col_666666"
           android:text="评论"
            />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_shareFriendContent_discu"
            android:id="@+id/tv_shareFriendContent_discuNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9px"
            android:textSize="24px"
            android:textColor="@color/col_999999"
            android:text="112"/>
     <com.zhy.autolayout.AutoLinearLayout
         android:layout_centerVertical="true"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:gravity="center_vertical"
         android:orientation="horizontal">
         <TextView
             android:layout_alignParentRight="true"
             android:id="@+id/tv_shareFriendContent_goodNum"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="10px"
             android:textSize="24px"
             android:textColor="@color/col_999999"
             android:text="120"/>
         <ImageView
             android:id="@+id/iv_shareFriendContent_good"
             android:layout_marginLeft="10px"
             android:scaleType="fitXY"
             android:layout_width="25dp"
             android:layout_height="20dp"
             android:src="@drawable/good"
             />
     </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/col_ECEEF0"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="20px"
        android:id="@+id/rv_shareFriendContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
