<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_search_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ike.communityalliance.ui.activity.SearchFriendActivity">

    <include layout="@layout/layout_title_top"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/et_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:drawableLeft="@mipmap/sealtalk_search"
            android:drawablePadding="6dp"
            android:hint="@string/phoneOrgroups"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1"/>

    </com.zhy.autolayout.AutoLinearLayout>


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_newfriendOrGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="#fff"
        android:orientation="horizontal"
        android:gravity="center_vertical"
          android:visibility="gone"
       >

        <com.ike.communityalliance.wedget.image.SelectableRoundedImageView
            android:layout_width="124px"
            android:layout_height="124px"
            android:id="@+id/iv_newFriendsOrGroup_item_header"
            android:src="@mipmap/default_fmessage"
            android:layout_marginTop="25px"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="27px"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginLeft="18px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_newFriendsOrGroup_item_header">
            <TextView
                android:text="象棋总动员"
                android:gravity="left"
                android:id="@+id/tv_newFriendsOrGroup_item_groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_333333"
                android:textSize="@dimen/font_32"
                />

            <!--<TextView-->
                <!--android:textColor="@color/col_999999"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="left"-->
                <!--android:layout_below="@id/tv_newFriendsOrGroup_item_groupName"-->
                <!--android:text="群人数:20人"-->
                <!--android:textSize="@dimen/font_24"-->
                <!--android:id="@+id/iv_inteset_rv_item_groupNum" />-->
        </com.zhy.autolayout.AutoRelativeLayout>
        <Button
            android:id="@+id/btn_newFriendsOrGroup_join"
            android:layout_width="164px"
            android:layout_height="60px"
            android:background="@drawable/interest_join"
            android:text="申请加入"
            android:textSize="@dimen/font_28px"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            />
        </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
