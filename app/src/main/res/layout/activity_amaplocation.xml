<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_amaplocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ll_seacher_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/location"
                android:drawableLeft="@mipmap/location2"
                android:ellipsize="end"
                android:background="@color/white"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_seach_location"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/interest_join"
                android:text="搜索"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/myLocation"
            android:src="@mipmap/img_location_now"
            android:layout_gravity="right|center"
            android:layout_marginRight="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </FrameLayout>

</RelativeLayout>
