<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_amaplocation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ll_location_header"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/ll_location_header_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="16sp"
                />
        </LinearLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/col_121212"
            android:text="位置"
            />
        <TextView
            android:id="@+id/tv_location_header_send"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/col_121212"
            android:text="发送"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_below="@id/ll_location_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.amap.api.maps.MapView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/ll_location"
           android:background="#70000000"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="110dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/ll_location_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/btn_back"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/col_10DB9F"
                    android:text="返回"
                    android:textSize="16sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <com.ike.communityalliance.wedget.CircleImageView
                    android:id="@+id/iv_location_userHeader"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_launcher"/>
                <TextView
                    android:id="@+id/tv_location_userName"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:text="孟小宝"/>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_seacher_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">
            <EditText
                android:id="@+id/location"
                android:drawableLeft="@mipmap/location2"
                android:ellipsize="end"
                android:background="@color/white"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="15sp"
                android:drawablePadding="8dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_seach_location"
                android:layout_marginLeft="10dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@drawable/interest_join"
                android:text="搜索"/>
        </LinearLayout>


        <ImageView
            android:id="@+id/myLocation"
            android:src="@mipmap/img_location_now"
            android:layout_gravity="right|center"
            android:layout_marginRight="5dp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>

    </FrameLayout>

</RelativeLayout>
