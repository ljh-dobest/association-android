<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <com.ike.communityalliance.wedget.XCRoundRectImageView
            android:layout_marginLeft="20px"
            android:id="@+id/iv_shareFriend_item_icon"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_toRightOf="@id/iv_shareFriend_item_icon"
            android:layout_marginLeft="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_shareFriend_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30px"
                android:textColor="@color/col_333333"
                android:text="孟小宝"/>

            <TextView
                android:id="@+id/tv_shareFriend_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/col_999999"
                android:text="2016-12-25:14:25"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_shareFriend_item_title"
            android:layout_marginLeft="110px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:textColor="@color/col_666666"
            android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>
        <android.support.v7.widget.RecyclerView
            android:layout_marginLeft="20px"
            android:id="@+id/rv_shareFriend_item_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="20px"
            android:layout_marginLeft="110px"
            android:layout_width="match_parent"
            android:layout_height="74px"
            android:padding="20px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/tv_shareFriends_good"
                android:layout_width="34px"
                android:layout_height="wrap_content"
                android:src="@drawable/share_item_good_bg"
                />
            <TextView
                android:id="@+id/tv_shareFriends_goodNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:textSize="24px"
                android:textColor="@color/col_999999"
                android:text="112"/>
            <ImageView
                android:id="@+id/tv_shareFriends_discu"
                android:layout_marginLeft="30px"
                android:layout_width="34px"
                android:layout_height="wrap_content"
                android:src="@drawable/pinglun"
                />
            <TextView
                android:id="@+id/tv_shareFriends_discuNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:textSize="24px"
                android:textColor="@color/col_999999"
                android:text="120"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>