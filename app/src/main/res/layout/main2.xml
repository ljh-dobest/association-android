<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_main_header"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/iv_main_recommed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/recommed"/>
        <ImageView
            android:padding="20dp"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:id="@+id/iv_main_chat_more"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/add"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/rl_main_header"
        android:id="@+id/main_view_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/col_ECEEF0"/>
    <android.support.v4.view.ViewPager
        android:layout_below="@id/main_view_1"
        android:layout_above="@+id/rg"
        android:id="@+id/main_vp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    ></android.support.v4.view.ViewPager>
    <com.ike.communityalliance.wedget.MainRadioGroup
        android:layout_alignParentBottom="true"
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb_home"
            android:text="首页"
            style="@style/radio_button_styles"
            />
        <RadioButton
            android:id="@+id/rb_chat"
            android:text="聊天"
            style="@style/radio_button_styles"
            />
        <RadioButton
            android:id="@+id/rb_mine"
            android:text="我的"
            style="@style/radio_button_styles"
            />

    </com.ike.communityalliance.wedget.MainRadioGroup>
    <View
        android:layout_above="@id/rg"
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        />
</RelativeLayout>
