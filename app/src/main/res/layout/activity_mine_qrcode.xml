<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.ike.communityalliance.ui.activity.MineQRCodeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/iv_mine_QR_back"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_back"
            />
        <TextView
            android:layout_centerInParent="true"
            style="@style/recommend_item_tv_styles"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="我的二维码"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/col_ECEEF0"/>
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <com.ike.communityalliance.wedget.XCRoundRectImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iv_mine_QR_userIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_portrait" />
        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_mine_QR_userIcon"
            android:id="@+id/rl_mine_QR_1"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mine_QR_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王博文"
                android:textSize="16sp" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_mine_QR_name"
                android:id="@+id/tv_mine_QR_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="29岁"/>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_below="@id/tv_mine_QR_name"
                android:layout_toRightOf="@id/tv_mine_QR_age"
                android:layout_marginLeft="8dp"
                android:id="@+id/iv_mine_QR_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mine_man"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_mine_QR_code"
        android:layout_marginTop="30dp"
        android:layout_width="205dp"
        android:layout_height="205dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>
</LinearLayout>
