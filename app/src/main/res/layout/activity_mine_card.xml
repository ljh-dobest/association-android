<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:paddingLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_mine_card_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="我的名片"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/col_333333"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <com.ike.communityalliance.wedget.XCRoundRectImageView
            android:layout_marginTop="10dp"
            android:id="@+id/iv_mine_card_userIcon"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/default_portrait" />
        <LinearLayout
            android:id="@+id/rl_mine_1"
            android:layout_below="@+id/iv_mine_card_userIcon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_mine_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王博文"
                android:textSize="16sp" />
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/iv_mine_card_sex"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/mine_man"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/rl_mine_1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="30dp"
            android:id="@+id/ll_mine_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="账号:"/>
                <TextView
                    android:id="@+id/tv_mine_card_account"
                    style="@style/mine_tv_styles"
                    android:text="11111111111"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="邮箱:"/>
                <TextView
                    android:id="@+id/tv_mine_card_email"
                    style="@style/mine_tv_styles"
                    android:text="孟小宝"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="爱好:"/>
                <TextView
                    android:id="@+id/tv_mine_card_favour"
                    style="@style/mine_tv_styles"
                    android:text=""/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="地址:"/>
                <TextView
                    android:id="@+id/tv_mine_card_address"
                    style="@style/mine_tv_styles"
                    android:text="广东省广州市天河区"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="40dp"
            android:id="@+id/ll_mine_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="推荐:"/>
                <TextView
                    android:id="@+id/tv_mine_card_recommenerName"
                    style="@style/mine_tv_styles"
                    android:text="黄金甲"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="认领:"/>
                <TextView
                    android:id="@+id/tv_mine_card_claimerName"
                    style="@style/mine_tv_styles"
                    android:text="孟小宝"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="贡献值:"/>
                <TextView
                    android:id="@+id/tv_mine_card_contributionNum"
                    style="@style/mine_tv_styles"
                    android:text="138"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    style="@style/mine_tv_styles"
                    android:text="信誉值:"/>
                <TextView
                    android:id="@+id/tv_mine_card_reputation"
                    style="@style/mine_tv_styles"
                    android:text="100"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
