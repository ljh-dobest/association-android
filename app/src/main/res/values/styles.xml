<resources
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingTranslation">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_40</item>
    </style>
    <style name="TabLayoutTextStyle">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MyCheckBox" parent="Base.Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/sel_checkbox</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/pop_push_up_in</item>
        <item name="android:windowExitAnimation">@anim/pop_push_down_out</item>
    </style>
    <style name="PopupBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:background">@drawable/popup_base_background</item>
    </style>
    <style name="radio_button_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="inteseting_rg_btn_style" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/col_333333</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/interest_rb_bg</item>
    </style>
    <style name="claimInfo_item_ll_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="claimInfo_item_rb_styles">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">140px</item>
        <item name="android:layout_height">80px</item>
        <item name="android:layout_marginLeft">20px</item>
        <item name="android:paddingLeft">25px</item>
        <item name="android:paddingRight">25px</item>
        <item name="android:background">@drawable/claiminfo_item_rb_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/col_11624A</item>
        <item name="android:button">@null</item>
    </style>
    <style name="recommend_item_tv_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:textColor">@color/col_909090</item>
    </style>

    <style name="recommend_item_et_styles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="recommend_item_rb_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:textColor">@color/col_909090</item>
    </style>

    <style name="recommend_item_ll_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="claimInfo_tv_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:textColor">@color/col_121212</item>
    </style>
    <style name="claimInfo_et_styles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:textColor">@color/col_121212</item>
    </style>
    <style name="claimInfo_item_sp_styles">
        <item name="android:layout_width">0px</item>
        <item name="android:layout_height">150px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">10px</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:textColor">@color/col_121212</item>
    </style>
    <style name="mine_tv_styles">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/col_333</item>
    </style>
    <style name="relation_radio_button_styles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground"> @android:color/transparent </item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <string-array name="childvalues">
        <item>棋牌</item>
        <item>游戏</item>
        <item>数码</item>
        <item>理财</item>
        <item>动漫</item>
        <item>音乐</item>
        <item>舞蹈</item>
        <item>书法</item>
        <item>美术</item>
        <item>魔术</item>
        <item>汽车</item>
        <item>运动</item>
        <item>美食</item>
        <item>养生</item>
        <item>旅行</item>
        <item>钓鱼</item>
        <item>天文</item>
        <item>亲子</item>
        <item>宠物</item>
        <item>娱乐</item>
    </string-array>
</resources>
