<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:paddingLeft="20px"
        android:id="@+id/rl_interestHeader"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_shareFriend_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_shareFriend_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/font_32"
            android:text="朋友圈"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginRight="20px"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_shareFriend_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/send_sharefriends"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/col_333333"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_shareFriend_msg"
        android:visibility="gone"
        android:layout_marginTop="20px"
        android:layout_width="380px"
        android:layout_height="80px"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/msg_bg"
        >
        <ImageView
            android:layout_marginLeft="20px"
            android:id="@+id/iv_shareFriend_msg"
            android:layout_width="62px"
            android:layout_height="62px"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:layout_marginLeft="56px"
            android:id="@+id/tv_shareFriend_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30px"
            android:text="10条新消息"/>
        <ImageView
            android:layout_marginLeft="55px"
            android:id="@+id/iv_shareFriend_msg_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/msg_arrow"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <com.andview.refreshview.XRefreshView
        android:id="@+id/xrefreshview_shareFriends"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_share_Friends"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
    </com.andview.refreshview.XRefreshView>
</com.zhy.autolayout.AutoLinearLayout>
