<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <com.min.helpcenter.views.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_question_icon"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_question_icon"
            android:layout_marginLeft="10px"
            android:id="@+id/tv_question_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textStyle="bold"
            android:textColor="@color/col_333333"
            android:text="孟小宝"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:id="@+id/tv_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textStyle="bold"
            android:textColor="@color/col_333333"
            android:text="2个小时前"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/tv_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/col_333333"
        android:textSize="30px"
        android:textStyle="bold"
        android:text="瑟瑟发抖积分升级版水电费等所发生的的放大撒大大所多是多少"
        />
    <jp.wasabeef.richeditor.RichEditor
        android:layout_marginTop="10px"
        android:id="@+id/tv_question_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="10px"
        android:layout_marginBottom="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_question_response"
            style="@style/tv_helpcenten_main_style"
            android:text="回答"/>
        <TextView
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@id/tv_question_response"
            android:id="@+id/tv_question_responseNum"
            style="@style/tv_helpcenten_main_style"
            android:text="20"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_question_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/gold"/>
            <TextView
                android:id="@+id/tv_question_gold"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv_question_gold"
                style="@style/tv_helpcenten_main_style"
                android:text="贡献币"
                />
            <TextView
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/tv_question_gold"
                android:id="@+id/tv_question_goldNum"
                style="@style/tv_helpcenten_main_style"
                android:text="50"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:paddingTop="30px"
        android:paddingBottom="20px"
        android:background="@color/col_ECEEF0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/col_121212"
        android:gravity="left|center_vertical"
        android:textSize="28px"
        android:textStyle="bold"
        android:text="最新回答"/>
</com.zhy.autolayout.AutoLinearLayout>