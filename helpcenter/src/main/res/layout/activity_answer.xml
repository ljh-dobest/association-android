<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_answer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:background="@color/white"
        android:paddingLeft="20px"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_centerVertical="true"
            android:id="@+id/ll_answer_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_answer_back"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/btn_back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col_10DB9F"
                android:text="返回"
                android:textSize="@dimen/font_32"
                />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_centerInParent="true"
            android:layout_marginRight="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="问题"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/col_333333"
        />
    <TextView
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:id="@+id/tv_answer_title"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center"
        android:textSize="30px"
        android:textStyle="bold"
        android:text="大东海沪深工会主席冰寒于水工程费用国防意识高风险高回报个多月五个多月"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/col_999999"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical">
        <com.min.helpcenter.views.CircleImageView
            android:layout_marginLeft="20px"
            android:id="@+id/iv_answer_icon"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_toRightOf="@id/iv_answer_icon"
            android:layout_marginLeft="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="40px"
                android:textSize="30px"
                android:textColor="@color/col_333333"
                android:text="孟小宝"/>
            <TextView
              android:id="@+id/tv_answer_accept"
                android:layout_marginLeft="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_accept"
                android:gravity="center"
                android:text="采纳答案"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_weight="1"/>

            <TextView
                android:layout_marginRight="5dp"
                android:id="@+id/tv_answer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/col_999999"
                android:text="2016-12-25:14:25"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <TextView
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:id="@+id/tv_answer_content"
        android:layout_marginLeft="110px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26px"
        android:textColor="@color/col_666666"
        android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="20px"
        android:layout_marginLeft="110px"
        android:layout_width="match_parent"
        android:layout_height="74px"
        android:padding="20px"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_answer_good"
            android:layout_width="34px"
            android:layout_height="wrap_content"
            android:src="@drawable/question_item_good_bg"
            />
        <TextView
            android:id="@+id/tv_answer_goodNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9px"
            android:textSize="24px"
            android:textColor="@color/col_999999"
            android:text="112"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:textColor="@color/col_121212"
        android:textSize="28px"
        android:textStyle="bold"
        android:gravity="left|center_vertical"
        android:background="@color/col_ECEEF0"
        android:text="评价"/>
    <android.support.v7.widget.RecyclerView
        android:paddingLeft="20px"
        android:paddingRight="20px"
        android:layout_marginTop="20px"
        android:id="@+id/rv_Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</com.zhy.autolayout.AutoLinearLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_answer_evaluate"
          android:layout_marginLeft="10px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="输入你的评价"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_answer_sendEvaluate"
          android:layout_margin="10px"
            android:layout_width="180px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="发送"
            android:background="@drawable/send"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>
