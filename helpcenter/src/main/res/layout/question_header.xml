<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <com.min.helpcenter.views.CircleImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_question_icon"
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_question_icon"
            android:layout_marginLeft="10px"
            android:id="@+id/tv_question_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textStyle="bold"
            android:textColor="@color/col_333333"
            android:text="孟小宝"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"
            android:id="@+id/tv_question_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28px"
            android:textStyle="bold"
            android:textColor="@color/col_333333"
            android:text="2个小时前"/>
    </com.zhy.autolayout.AutoRelativeLayout>
    <TextView
        android:layout_marginTop="20px"
        android:id="@+id/tv_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/col_333333"
        android:textSize="30px"
        android:textStyle="bold"
        android:text="瑟瑟发抖积分升级版水电费等所发生的的放大撒大大所多是多少"
        />
    <jp.wasabeef.richeditor.RichEditor
        android:layout_marginTop="10px"
        android:id="@+id/tv_question_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="10px"
        android:layout_marginBottom="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_question_response"
            style="@style/tv_helpcenten_main_style"
            android:text="回答"/>
        <TextView
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@id/tv_question_response"
            android:id="@+id/tv_question_responseNum"
            style="@style/tv_helpcenten_main_style"
            android:text="20"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_question_gold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/gold"/>
            <TextView
                android:id="@+id/tv_question_gold"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/iv_question_gold"
                style="@style/tv_helpcenten_main_style"
                android:text="贡献币"
                />
            <TextView
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@id/tv_question_gold"
                android:id="@+id/tv_question_goldNum"
                style="@style/tv_helpcenten_main_style"
                android:text="50"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_good_answer"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <com.zhy.autolayout.AutoLinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/col_ECEEF0"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/good_answer"
            />
        <TextView
            android:layout_marginLeft="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/col_121212"
            android:textSize="14sp"
            android:text="最佳回答"/>
    </com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <com.min.helpcenter.views.CircleImageView
                android:layout_marginLeft="20px"
                android:id="@+id/iv_question_good_item_icon"
                android:layout_width="80px"
                android:layout_height="80px"
                android:src="@mipmap/ic_launcher"/>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_toRightOf="@id/iv_question_good_item_icon"
                android:layout_marginLeft="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_question_good_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30px"
                    android:textColor="@color/col_333333"
                    android:text="孟小宝"/>

                <TextView
                    android:id="@+id/tv_question_good_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/col_999999"
                    android:text="2016-12-25:14:25"/>
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_question_good_item_content"
            android:layout_marginLeft="110px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26px"
            android:textColor="@color/col_666666"
            android:text="上大大的萨达萨达是飞洒发讯课程女款vkdn"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="20px"
            android:layout_marginLeft="110px"
            android:layout_width="match_parent"
            android:layout_height="74px"
            android:padding="20px"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/iv_question_good_item_good"
                android:layout_width="34px"
                android:layout_height="wrap_content"
                android:src="@drawable/question_item_good_bg"
                />
            <TextView
                android:id="@+id/tv_question_good_item_goodNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:textSize="24px"
                android:textColor="@color/col_999999"
                android:text="112"/>
            <ImageView
                android:id="@+id/iv_question_good_item_discu"
                android:layout_marginLeft="30px"
                android:layout_width="34px"
                android:layout_height="wrap_content"
                android:src="@drawable/pinglun"
                />
            <TextView
                android:id="@+id/tv_question_good_item_discuNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9px"
                android:textSize="24px"
                android:textColor="@color/col_999999"
                android:text="120"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <TextView
        android:paddingLeft="10dp"
        android:paddingTop="30px"
        android:paddingBottom="20px"
        android:background="@color/col_ECEEF0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/col_121212"
        android:gravity="left|center_vertical"
        android:textSize="14sp"
        android:text="最新回答"/>
</com.zhy.autolayout.AutoLinearLayout>