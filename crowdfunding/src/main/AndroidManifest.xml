<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.issp.association.crowdfunding">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:name="com.issp.association.crowdfunding.App"
        android:allowBackup="true"
        android:icon="@mipmap/rest"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.AddShippingAddressActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.AddSupportProjectActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.ManagementShippingAddressActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.MessageActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.MinProductActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.OrderDetailActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.ProductCommentActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.ProductParticularsActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.SupportProductActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.FeedForCommentActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.AddCrowdFundingActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.ProductIDCardActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.AddCommodityActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.TextDetailsActivity"
            android:exported="true" />
        <activity android:name=".ui.activity.GraphicDetailsActivity"
            android:exported="true" />

        <!--选择图片-->
        <activity
            android:name="cn.finalteam.rxgalleryfinal.ui.activity.MediaActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="design_width"
            android:value="768" />
        <meta-data
            android:name="design_height"
            android:value="1280" />
    </application>

</manifest>