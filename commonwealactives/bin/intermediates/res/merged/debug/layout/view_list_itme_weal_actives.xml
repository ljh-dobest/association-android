<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/border_10"
    android:layout_marginBottom="@dimen/border_10"
    android:id="@+id/ll_item"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_user_portrait_url"
            android:layout_width="@dimen/border_88"
            android:layout_height="@dimen/border_88"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/border_20"
            android:layout_marginLeft="@dimen/border_20"
            android:layout_marginTop="@dimen/border_20"
            android:layout_marginBottom="@dimen/border_10"
            android:src="@mipmap/header" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_28"
            android:text="发起人昵称"
            android:layout_marginRight="@dimen/border_10"
            android:textColor="@color/color_33"/>

        <TextView
            android:id="@+id/tv_initiator"
            android:layout_width="@dimen/border_80"
            android:layout_height="@dimen/border_34"
            android:textSize="@dimen/font_20"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/bg_initiator"
            android:text="发起人"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="@dimen/border_20"
            android:text="@string/str_title" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_389"
        android:layout_marginLeft="@dimen/border_10"
        android:layout_marginRight="@dimen/border_10"
        android:padding="@dimen/border_10">

        <ImageView
            android:id="@+id/iv_actives_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/banner02" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="@dimen/border_130"
            android:layout_height="@dimen/border_58"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/border_20"
            android:alpha="0.5"
            android:background="@drawable/botm_benefit_status"
            android:gravity="center"
            android:text="进行中"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_30" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/border_20"
        android:text="这是公益活动标题"
        android:textColor="@color/color_33"
        android:textSize="@dimen/font_38" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/border_20"
        android:layout_marginRight="@dimen/border_26"
        android:textColor="@color/color_99"
        android:textSize="@dimen/font_24"
        android:text="活动简介"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_2"
        android:layout_marginLeft="@dimen/border_20"
        android:layout_marginRight="@dimen/border_20"
        android:layout_marginTop="@dimen/border_40"
        android:background="@color/aam_item_border" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/border_73"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/border_10">

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_share_btn" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/border_20"
                android:paddingRight="@dimen/border_20"
                android:text="0"
                android:textColor="@color/color_66"
                android:textSize="@dimen/font_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_likes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/border_10">

            <ImageView
                android:id="@+id/iv_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_have_thumb_up_btn" />

            <TextView
                android:id="@+id/tv_likes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/border_20"
                android:paddingRight="@dimen/border_20"
                android:text="0"
                android:textColor="@color/color_66"
                android:textSize="@dimen/font_24" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/border_10">

            <ImageView
                android:id="@+id/iv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/img_comment_btn" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/border_20"
                android:paddingRight="@dimen/border_20"
                android:text="0"
                android:textColor="@color/color_66"
                android:textSize="@dimen/font_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/border_20"
            android:layout_weight="1"
            android:gravity="right"
            android:text="广州"
            android:textColor="@color/color_ab"
            android:textSize="@dimen/font_22" />
    </LinearLayout>
</LinearLayout>