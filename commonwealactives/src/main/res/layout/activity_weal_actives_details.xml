<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lt_main_title_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/back"
        android:drawablePadding="@dimen/border_10"
        android:gravity="center"
        android:padding="@dimen/border_20"
        android:text="@string/str_title_left"
        android:textColor="@color/color_10"
        android:textSize="@dimen/font_30"
        android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/aam_item_border"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_466">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/banner02" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="@dimen/border_140"
                    android:layout_height="@dimen/border_58"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/border_20"
                    android:alpha="0.5"
                    android:background="@drawable/botm_benefit_status"
                    android:gravity="center"
                    android:text="进行中"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/font_30" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/border_20">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/border_58"
                    android:layout_marginTop="@dimen/border_10"
                    android:text="公益活动标题"
                    android:textColor="@color/color_33"
                    android:textSize="@dimen/font_38" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="时间：2017-05-05 17:30:00"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_28" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_2"
                    android:layout_marginBottom="@dimen/border_20"
                    android:layout_marginTop="@dimen/border_20"
                    android:background="@color/aam_item_border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地点：全国"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_28" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_2"
                    android:layout_marginBottom="@dimen/border_20"
                    android:layout_marginTop="@dimen/border_20"
                    android:background="@color/aam_item_border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已报名：123/无限制"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_28" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_2"
                    android:layout_marginBottom="@dimen/border_20"
                    android:layout_marginTop="@dimen/border_20"
                    android:background="@color/aam_item_border" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="报名费：免费"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_28" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_20"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="@dimen/border_20">

                <ImageView
                    android:id="@+id/iv_user_portrait_url"
                    android:layout_width="@dimen/border_114"
                    android:layout_height="@dimen/border_114"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@mipmap/header" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/border_16"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/border_10"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/border_10"
                            android:text="发起人昵称"
                            android:textColor="@color/color_33"
                            android:textSize="@dimen/font_28" />

                        <TextView
                            android:id="@+id/tv_initiator"
                            android:layout_width="@dimen/border_80"
                            android:layout_height="@dimen/border_34"
                            android:background="@drawable/bg_initiator"
                            android:gravity="center"
                            android:text="发起人"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/font_20" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="MW"
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/border_26" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/border_20"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/border_20">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_88"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="已报名（20）"
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/font_28" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/border_20"
                        android:text="更多"
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/font_28" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_2"
                    android:layout_marginBottom="@dimen/border_20"
                    android:layout_marginTop="@dimen/border_20"
                    android:background="@color/aam_item_border" />

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_140"
                    android:padding="@dimen/border_20"
                    android:numColumns="6"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>